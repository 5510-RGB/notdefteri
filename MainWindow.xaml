<Window x:Class="NotDefteri.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NotDefteri"
        Title="Basit Not Defteri" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True"
        Visibility="Visible"
        Closing="MainWindow_Closing">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:CustomCommands.Zoom}" 
                      Executed="ZoomCommand_Executed" 
                      CanExecute="ZoomCommand_CanExecute"/>
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="_Dosya">
                <MenuItem Header="_Yeni" Name="MenuItem_Yeni" Click="MenuItem_Yeni_Click"/>
                <MenuItem Header="_Aç" Name="MenuItem_Ac" Click="MenuItem_Ac_Click"/>
                <MenuItem Header="_Kaydet" Name="MenuItem_Kaydet" Click="MenuItem_Kaydet_Click"/>
                <Separator />
                <MenuItem Header="_Çıkış" Name="MenuItem_Cikis" Click="MenuItem_Cikis_Click"/>
            </MenuItem>
            
            <MenuItem Header="_Düzenle">
                <MenuItem Header="_Geri Al" Command="Undo" InputGestureText="Ctrl+Z"/>
                <MenuItem Header="_Yinele" Command="Redo" InputGestureText="Ctrl+Y"/>
                <Separator />
                <MenuItem Header="_Kes" Command="Cut" InputGestureText="Ctrl+X"/>
                <MenuItem Header="_Kopyala" Command="Copy" InputGestureText="Ctrl+C"/>
                <MenuItem Header="_Yapıştır" Command="Paste" InputGestureText="Ctrl+V"/>
                <MenuItem Header="_Sil" Command="Delete"/>
                <Separator />
                <MenuItem Header="_Tümünü Seç" Command="SelectAll" InputGestureText="Ctrl+A"/>
            </MenuItem>

            <MenuItem Header="_Biçim">
                <MenuItem Header="_Yazı Tipi..." Name="MenuItem_YaziTipi" Click="MenuItem_YaziTipi_Click"/>
                <MenuItem Header="_Yazı Rengi" Name="MenuItem_YaziRengi" Click="MenuItem_YaziRengi_Click"/>
                <MenuItem Header="_Arkaplan Rengi" Name="MenuItem_ArkaplanRengi" Click="MenuItem_ArkaplanRengi_Click"/>
                <Separator />
                <MenuItem Header="Kalın" Name="MenuItem_Kalin" Click="MenuItem_Kalin_Click" InputGestureText="Ctrl+K">
                    <MenuItem.Icon>
                        <TextBlock FontWeight="Bold">K</TextBlock>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="İtalik" Name="MenuItem_Italik" Click="MenuItem_Italik_Click" InputGestureText="Ctrl+I">
                    <MenuItem.Icon>
                        <TextBlock FontStyle="Italic">İ</TextBlock>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Altı Çizili" Name="MenuItem_AltıCizili" Click="MenuItem_AltıCizili_Click" InputGestureText="Ctrl+U">
                    <MenuItem.Icon>
                        <TextBlock TextDecorations="Underline">U</TextBlock>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Görünüm">
                <MenuItem Header="Yakınlaştır" 
                          Command="{x:Static local:CustomCommands.Zoom}" 
                          CommandParameter="1.2" 
                          InputGestureText="Ctrl++"/>
                <MenuItem Header="Uzaklaştır" 
                          Command="{x:Static local:CustomCommands.Zoom}" 
                          CommandParameter="0.8" 
                          InputGestureText="Ctrl+-"/>
                <Separator />
                <MenuItem Header="Varsayılan Boyut" 
                          Command="{x:Static local:CustomCommands.Zoom}" 
                          CommandParameter="1.0"/>
            </MenuItem>
        </Menu>

        <ToolBar Grid.Row="1">
            <Button Command="Cut" ToolTip="Kes (Ctrl+X)">
                <Image Source="/Images/cut.png" Width="16" Height="16"/>
            </Button>
            <Button Command="Copy" ToolTip="Kopyala (Ctrl+C)">
                <Image Source="/Images/copy.png" Width="16" Height="16"/>
            </Button>
            <Button Command="Paste" ToolTip="Yapıştır (Ctrl+V)">
                <Image Source="/Images/paste.png" Width="16" Height="16"/>
            </Button>
            <Separator/>
            <Button Click="MenuItem_Kalin_Click" ToolTip="Kalın (Ctrl+K)" Name="btnKalin">
                <TextBlock FontWeight="Bold">K</TextBlock>
            </Button>
            <Button Click="MenuItem_Italik_Click" ToolTip="İtalik (Ctrl+I)" Name="btnItalik">
                <TextBlock FontStyle="Italic">İ</TextBlock>
            </Button>
            <Button Click="MenuItem_AltıCizili_Click" ToolTip="Altı Çizili (Ctrl+U)" Name="btnAltıCizili">
                <TextBlock TextDecorations="Underline">A</TextBlock>
            </Button>
            <Separator/>
            <Button Click="MenuItem_YaziRengi_Click" ToolTip="Yazı Rengi" Name="btnYaziRengi">
                <TextBlock Foreground="Black">A</TextBlock>
            </Button>
            <Button Click="MenuItem_ArkaplanRengi_Click" ToolTip="Arkaplan Rengi" Name="btnArkaplanRengi">
                <Border Background="White" BorderBrush="Black" BorderThickness="1" Width="20" Height="20">
                    <TextBlock Text=" " Background="Transparent"/>
                </Border>
            </Button>
        </ToolBar>

        <RichTextBox Grid.Row="2" 
                    Name="txtEditor" 
                    VerticalScrollBarVisibility="Auto" 
                    HorizontalScrollBarVisibility="Auto" 
                    Padding="5" 
                    FontSize="14" 
                    TextChanged="TxtEditor_TextChanged"
                    AcceptsReturn="True"
                    AcceptsTab="True">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>
    </Grid>
</Window>